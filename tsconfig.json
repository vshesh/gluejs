{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["es2021", "dom"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",

    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES2020"
    }
  },
  "include": [
    "src/**/*.ts", "test/test.ts",
  ],
  "exclude": [
    "node_modules",
    "logbook",
    "test",
    "dist"
  ]
}

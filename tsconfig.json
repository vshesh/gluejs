{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
    "sourceMap": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES2020"
    }
  }
}
